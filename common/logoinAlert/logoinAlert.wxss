/* common/logoinAlert/logoinAlert.wxss */
.logoinAlert{
  position: fixed;
  z-index: 3;
  left: 0;
  bottom: 10%;
  width: 100%;
  border: 1rpx solid red;
  background-color: red;
}
.logoinAlert-container{
  width: 250rpx;
  height: 80rpx;
  margin: auto;
  border-radius: 8rpx;
  text-align: center;
}

.wx-logoinAlert-con{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logoinAlert-loading{
  width: 34rpx;
  height: 29rpx;
  line-height: 80rpx;
}

.logoinAlert-Text{
  font-size: 24rpx;
  color: white;
  margin-left: 21rpx
}

/* 动态加载动画 */
.logoinAlert-animate{
  animation: loading 2s ease infinite;
}

@keyframes loading{
  0%{
    transform:rotateZ(0deg);
  }
  25%{
    transform:rotateZ(90deg);
  }
  50%{
    transform:rotateZ(180deg);
  }
  75%{
    transform:rotateZ(270deg);
  }
  100%{
    transform:rotateZ(360deg);
  }
}