/* common/team/team.wxss */
/* 切换公司 */
.switch-team{
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #FFFFFF;
  height: 120rpx;
  padding: 20rpx 0rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.company-logo-area{
  margin-left: 40rpx;
}
.companyLogo{
  width: 80rpx;
  height: 80rpx;
}
.companyInfo{
  margin-left: 21rpx;
  height: 80rpx;
  flex:2;
}
.companyName{
  width: 450rpx;
  color:#333333;
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.company-legal-person{
  color: #999999;
  font-size: 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.company-radio{
  margin-right: 30rpx;
}