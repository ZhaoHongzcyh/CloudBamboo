
/* 新建文件夹弹框组件 */
.newfileModel{
  position: fixed;
  top: 0rpx;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
}
.content{
  position: absolute;
  width: 550rpx;
  height: 250rpx;
  top: 50%;
  left: 50%;
  margin-left: -275rpx;
  margin-top: -125rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  background-color: white;
}
.title{
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
}
.foldername{
  height: 40rpx;
  width: 70%;
  margin: auto;
  margin-top: 30rpx;
  border-bottom: 1rpx solid #409CF2;
}
.filePlace{
  font-size: 28rpx;
}
.btn{
  position: relative;
  width: 100%;
  height: 60rpx;
  margin-top: 30rpx;
}
.commonBtn{
  position: absolute;
  width: 30%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
}
.reset{
  left: 15%;
  color: #666666;
  background-color: rgba(204,204,204,1);
}
.sureadd{
  right: 15%;
  background-color: #409CF2;
  color: white;
}