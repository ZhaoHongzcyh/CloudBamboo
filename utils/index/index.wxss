/* 验证码按钮 */
.getVerificationCode{
  position: absolute;
  z-index: 2;
  right: 0rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  text-align:center;
  color:#fff;
  background:rgba(64,156,242,1);
  border-radius: 0rpx 3rpx 3rpx 0rpx;
}

/* 登录与注册按钮 */
.btn{
  position:relative;
  width: 630rpx;
  height: 80rpx;
  font-size: 32rpx;
  text-align: center;
  margin: auto;
  margin-top: 50rpx;
  padding: 0rpx; 
  background-color: rgba(219,219,219,1);
  color: white;
  border-radius: 40rpx;
  border: 1rpx solid rgba(219,219,219,1);
}

.btnText{
  height: 32rpx;
  line-height: 32rpx; 
  margin: auto;
  margin-top: 24rpx;
  padding: 0rpx;
  font-size: 32rpx;
  letter-spacing: 15rpx;
}

