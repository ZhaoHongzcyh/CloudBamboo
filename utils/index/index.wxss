  color: #AAAAAA;
}

.password{
  margin-top: 30rpx;
}

.input,.placeholder{
  position:absolute;
  margin-left:30rpx;
  width: 168rpx;
  height: 28rpx;
  top: 27rpx;
  bottom: 25rpx;
  line-height: 28rpx;
  font-size: 28rpx;
}

.placeholder{
  width: calc(100% - 60rpx);
}

