/* pages/company/checkWork/checkwork.wxss */
page{
  background-color: rgba(245,245,245,1);
}
/* ------------------------------考勤样式--------------------------------------- */
/* 考勤区域 */
.company-check-work{
  display: flex;
  margin-bottom: 30rpx;
  align-items: center;
  background-color:#FFFFFF;
  box-shadow: 0rpx 2rpx 2rpx 2rpx rgb(245,245,245);
}

.comapny-today{
  width: 179rpx;
  height: 168rpx;
  border-right:1rpx solid rgba(229,229,229,1);
}

.work-month-data{
  width: 81rpx;
  height: 104rpx;
  margin:auto;
  margin-top: 36rpx;
  margin-left: 61rpx;
  margin-right: 37rpx;
}
.work-data{
  width: 81rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align:center;
  color: #409CF2;
  margin: 0rpx;
  font-size: 72rpx;
}
.work-month{
  margin-top: 23rpx;
  width: 81rpx;
  height: 27rpx;
  font-size: 26rpx;
  text-align: center;
  color:rgba(153,153,153,1);
}

/* 上班与下班考勤 */
.company-work{
  position:relative;
  display: block;
  width: 100%;
  height: 280rpx;
}
.attend{
  text-align: center;
  width: 80rpx;
}
.company-goToWork{
  height: 140rpx;
  display:flex;
  align-items: center;
}
.company-goOffWork{
  height: 140rpx;
  display: flex;
  align-items: center;
}

.company-clock{
  margin-left: 39rpx;
  color: #999999;
  font-size: 28rpx;
}

.punch-clock-time{
  font-size: 28rpx;
  color: #409CF2
}

.punch-clock-time-off{
  font-size: 28rpx;
  color:#999999;
}

.punch-card-btn,.punch-card{
  width: 160rpx;
  height: 46rpx;
  margin-left: 42rpx;
  border-radius: 23rpx;
  font-size: 24rpx;
  line-height: 46rpx;
  color: white;
  text-align: center;
  background-color: rgba(64,156,242,1);
}

.punch-card-btn-off{
  background-color:rgba(204,204,204,1)
}
.error{
  color: red;
}



/* -----------------------------日历样式--------------------- */
.calendar {
    /* background-color:rgba(64,58,96,1);  背景色为白色 */
    margin-top: 30rpx;
    padding-top: 10rpx;       /*上内边距为10px*/
    border-radius: 15rpx;     /*添加边框圆角*/
    background-color: white;
}

.header {
    font-size: large;
    color: #59518d;
}

.board {
    color: #c7cbe2;
    font-weight: bold;
}

.colorTxt{
  position: relative;
  display: flex;
  font-size: 24rpx;
  margin-top: 30rpx;
}
.comwork{
  position: absolute;
  right: 120rpx;
  display:flex;
  align-items: center;
}

.lacktime{
  right: 0rpx;
}

.colorIdenti{
  width: 28rpx;
  height: 28rpx;
}
.workSuccess{
  right: 260rpx;
  background-color: #409CF2;
}

.workError{
  right: 126rpx;
  background-color: #F55D61;
}