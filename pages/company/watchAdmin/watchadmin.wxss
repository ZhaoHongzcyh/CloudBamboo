}

.addBtnArea{
  width: 68rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  color: #333;
  text-align: center;
}

.comCircle{
  width: 68rpx;
  height: 68rpx;
