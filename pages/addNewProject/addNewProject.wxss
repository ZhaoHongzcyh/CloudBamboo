.add-new-project{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(245,245,245,1);
}
.title{
  height: 68rpx;
  padding-left: 41rpx;
  line-height: 68rpx;
  color: #999999;
  font-size: 24rpx;
  background-color: rgba(245,245,245,1);
}
.textarea{
  margin-left: 30rpx;
}
.input{
  background-color: white;
  height: 120rpx;
  width: 100%;
  padding-top: 24rpx;
}
.introduction{
  color: #666666;
  font-size: 28rpx;
  width: calc(100% - 30rpx);
  height: 96rpx;
}
/* 项目配置 */
.project-config{
  margin-top: 30rpx;
}
.project{
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: white;
}
.config{
  padding-bottom: 26rpx;
  height: 27rpx;
  line-height: 27rpx;
  margin-left: 41rpx;
  color: #333333;
  font-size: 28rpx;
  border-bottom: 1rpx solid rgba(219,219,219,1);
}
.value{
  flex: 2;
  margin-right: 41rpx;
  height: 27rpx;
  line-height: 27rpx;
  font-size: 28rpx;
  color: #409CF2;
  text-align: right;
  padding-bottom: 26rpx;
  border-bottom: 1rpx solid rgba(219,219,219,1);
}