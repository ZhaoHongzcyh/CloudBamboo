.add-new-project{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(245,245,245,1);
}
.title{
  height: 68rpx;
  padding-left: 41rpx;
  line-height: 68rpx;
  color: #999999;
  font-size: 24rpx;
  background-color: rgba(245,245,245,1);
}
.textarea{
  margin-left: 30rpx;
}
.input{
  background-color: white;
  height: 120rpx;
  width: 100%;
  padding-top: 24rpx;
}
.introduction{
  color: #666666;
  font-size: 28rpx;
  width: calc(100% - 30rpx);
  height: 96rpx;
}
/* 项目配置 */
.project-config{
  margin-top: 30rpx;
}
.project{
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: white;
}
.config{
  padding-bottom: 26rpx;
  height: 27rpx;
  line-height: 27rpx;
  margin-left: 41rpx;
  color: #333333;
  font-size: 28rpx;
  border-bottom: 1rpx solid rgba(219,219,219,1);
}
.value{
  flex: 2;
  margin-right: 41rpx;
  height: 27rpx;
  line-height: 27rpx;
  font-size: 28rpx;
  color: #409CF2;
  text-align: right;
  padding-bottom: 26rpx;
  border-bottom: 1rpx solid rgba(219,219,219,1);
}
/* 添加用户 */
.add-user{
  background-color: white;
  display: flex;
  align-items: center;
  flex-direction: wrap;
}
.add-btn{
  margin-left: 29rpx;
  border-radius: 50%;
}
.add-img{
  width: 68rpx;
  height: 68rpx;
}
/* 添加项目按钮 */
.add-company-btn{
  width: 670rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  border-radius: 36rpx;
  margin: auto;
  margin-top: 20rpx;
  color: white;
  text-align: center;
  background-color: #409CF2;
}

/* 项目级别 */
.project-sleve{
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  background-color: rgba(240,240,240,1);
  text-align: center;
}
.sleve{
  font-size: 28rpx;
  margin-top: 20rpx;
}
/* 项目分组列表 */
.grouplist{
  margin: 0rpx;
  background-color: rgba(245,245,245,1);
}
.project-list{
  display: flex;
  align-items: center;
  height: 120rpx;
  background-color: white;
  border-bottom: 1rpx solid #DBDBDB;
}
.self{
  margin-top: 21rpx;
  margin-bottom: 21rpx;
}
.companyImg{
  margin-left: 31rpx;
}
.headImg{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.company-name{
  height: 27rpx;
  line-height: 27rpx;
  color: #333333;
  font-size: 28rpx;
}
.company{
  margin-left: 20rpx;
}
.chart{
  display: flex;
}
.charter{
  font-size: 24rpx;
  color: #999999;
}
.radio-area{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  flex: 3;
  text-align: right;
}
.radio{
  margin-right: 30rpx;
}