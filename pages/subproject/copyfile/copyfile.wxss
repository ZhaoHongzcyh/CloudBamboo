/* pages/subproject/copyfile/copyfile.wxss */
page{
  background-color: rgba(245,245,245,1);
}

.wrap{
  margin-top: 20rpx;
}

.head{
  position: relative;
  display: flex;
  font-size: 28rpx;
  align-items: center;
  height: 80rpx;
  color: #999999;
}

.line{
  position: absolute;
  bottom: 0rpx;
  width: 60%;
  left: 20%;
  border-bottom: 4rpx solid #409CF2;
}
.commontitle{
  position: relative;
  text-align: center;
  line-height: 80rpx;
  height: 80rpx;
  width: 33.33%;
}
.nav{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999999;
  background-color: white;
  border-bottom: 1rpx solid #DBDBDB;
}

.cloudDisk{
  position: absolute;
  top: 80rpx;
  width: 100%;
  height: calc(100% - 200rpx);
  overflow: auto;

}

.footer{
  display: flex;
  position: fixed;
  align-items: center;
  justify-content: center;
  color: white;
  bottom: 30rpx;
  width: 100%;
  height: 72rpx;
  font-size: 28rpx;
  border:1rpx solid red;
}

.btn{
  height: 72rpx;
  width: 315rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #409CF2;
}

.spacing{
  width: 40rpx;
}