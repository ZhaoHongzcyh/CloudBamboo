/* pages/subproject/copyfile/copyfile.wxss */
page{
  background-color: rgba(245,245,245,1);
}

.wrap{
  margin-top: 20rpx;
}

.head{
  position: relative;
  display: flex;
  font-size: 28rpx;
  align-items: center;
  height: 80rpx;
  color: #999999;
  background-color: white;
}

.line{
  position: absolute;
  bottom: 0rpx;
  width: 60%;
  left: 20%;
  border-bottom: 4rpx solid #409CF2;
}
.commontitle{
  position: relative;
  text-align: center;
  line-height: 80rpx;
  height: 80rpx;
  width: 33.33%;
}
.nav{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999999;
  background-color: white;
  border-bottom: 1rpx solid #DBDBDB;
}

.cloudDisk{
  position: absolute;
  top: 91rpx;
  width: 100%;
  height: calc(100% - 200rpx);
  overflow: auto;
}

.footer{
  display: flex;
  position: fixed;
  align-items: center;
  justify-content: center;
  color: white;
  bottom: 30rpx;
  width: 100%;
  height: 72rpx;
  font-size: 28rpx;
}

.btn{
  height: 72rpx;
  width: 315rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #409CF2;
}

.spacing{
  width: 40rpx;
}


/* 当文件列表为空的样式 */
.nofile{
  width: 230rpx;
  height: 230rpx;
  font-size: 28rpx;
  text-align: center;
  margin: auto;
  margin-top: 250rpx;
  color: #999;
}

.nofileimg{
  width: 125rpx;
  height: 125rpx;
}

.nofiletxt{
  margin-top: 20rpx;
}

/* -------------------------------------------------------------我的公司---------------------------------------------- */
.singlecompany{
  display: flex;
  height: 120rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #DBDBDB;
  color: #333333;
  align-items: center;
  background-color: white;
}

.companyHead{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 40rpx;
}

.companyinfo{
  margin-left: 21rpx;
}

.admin{
  font-size: 24rpx;
  color: #999999;
}

.hasntCompany{
  position: fixed;
  width: 100%;
  height: 100%;
  text-align: center; 
  margin: auto;
  background-color: rgba(245,245,245,1);
  /* width: 240rpx; */
}
.Hint{
  margin-top: 300rpx;
  text-align: center;
}
.HintImg{
  width: 150rpx;
  height: 150rpx;
}
.HintText{
  margin-top:23rpx;
  text-align: center;
  color: #999999;
  font-size: 24rpx;
}