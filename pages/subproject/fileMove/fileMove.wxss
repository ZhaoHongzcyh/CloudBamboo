/* pages/subproject/fileMove/fileMove.wxss */
.move{
  position: absolute;
  width: 100%;
  height: 100%;
}
.urltitle{
  font-size: 20rpx;
  color:#999999;
}
.last{
  color: #409CF2;
}
.filelist{
  margin-top: 10rpx;
}

.file-select-info{
  display: flex;
  z-index: 4;
  top: 0rpx;
  width: 100%;
  background-color: white;
  align-items: center;
  height: 88rpx;
}

/* 文件列表 */
.filearea{
  height: calc(100% - 170rpx);
  overflow: auto;
}
/* 文件移动按钮区域 */
.toobar{
  display: flex;
  position: fixed;
  width: 100%;
  bottom: 10rpx;
  height: 72rpx;
  align-items: center;
  justify-content: center;
}
.interval{
  width: 20rpx;
}
.commonbtn{
  color: white;
  width: 315rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  text-align: center;
  background-color: #409CF2;
}