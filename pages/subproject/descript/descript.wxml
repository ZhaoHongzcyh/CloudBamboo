<!--pages/subproject/descript/deacript.wxml-->
<view>
    <view class="common_title">项目名称</view>
    <view class="textarea">
      <textarea value="{{project.title}}" class="projectname" bindinput='changeProjectName' placeholder-class="placeholder"></textarea>
    </view>
    <view class="common_title">项目描述</view>
    <view class="textarea">
      <textarea value="{{project.description}}" bindinput='changeProjectDescript' class="projectdescript" placeholder-class='placeholder'></textarea>
    </view>
  <view class="save" bindtap="saveProjectInfo">保存</view>
</view>
