/* pages/subproject/subproject.wxss */
page{
  background-color: rgba(245,245,245,1);
}
.menu-list{
  display: flex;
  justify-content: center;
  justify-items: center;
  height: 80rpx;
  font-size: 28rpx;
  color: #666666;
  background-color: rgba(255,255,255,1);
}
.menu{
  position: relative;
  padding: 0rpx;
  width: 25%;
  height: 80rpx;
  text-align: center;
}
.menuText{
  height: 26rpx;
  margin-top: 20rpx;
}
.textcolor{
  color: #409CF2;
}
.menuline{
  width: 80%;
  margin: auto;
  margin-top: 10rpx;
  border-top: 4rpx solid #409CF2;
}
/* 任务筛选 */
.screen{
  display:flex;
  height: 100rpx;
  align-items: center;
}
.screenCondiction{
  font-size: 28rpx;
  height: 27rpx;
  padding: 0rpx;
  display: flex;
  align-items: center;
  color: #666666;
}
.taskScreen{
  margin-left: 30rpx;
}
.stoptime{
  margin-left: 39rpx;
}

.triangle{
  width: 20rpx;
  height: 12rpx;
  margin-left: 15rpx;
}
/* 按照时间筛选 */
.stoptimelist{
  height: 100rpx;
  display: flex;
  align-items: center;
  background-color: white;
  border-bottom: 1rpx solid #666666;
  background-color: white;
  font-size: 28rpx;
  color: #666666;
}
.timetitle{
  margin-left: 41rpx;
  width: 119rpx;
}
.timeradio{
  margin-left: 510rpx;
}
/* 任务计划 */
.planlist{
  position: relative;
  width: 710rpx;
  border-radius: 5rpx;
  margin: auto;
  margin-top: 18rpx;
  background-color:rgba(255,255,255,1);
}
.planName{
  color: #333333;
  font-size: 28rpx;
  height: 82rpx;
  line-height: 82rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
/* 新建任务 */
.newTaskBtn{
  color: #409CF2;
  font-size: 28rpx;
  height: 80rpx;
  width: 100%;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #EBECF0;
}
.single-task{
  display: flex;
  align-items: center;
  height: 120rpx;
  border-bottom: 1rpx solid #EBECF0;
}
.radio-area{
  margin-left: 30rpx;
}
.normalcolor{
  border-left: 4rpx solid #FFAF38;
}
.urgentcolor{
  border-left: 4rpx solid #FF4F3E;
}
.task-info{
  margin-left: 24rpx;
  width: 306rpx;
}
.taskname{
  color: #666666;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.tasktime{
  height: 40rpx;
  width: 176rpx;
  margin-top: 8rpx;
  text-align: center;
  display: table-cell;
  vertical-align: middle;
  border-radius: 3rpx;
  color: white;
  font-size: 24rpx;
}
.offtimeout{
  background-color: #409CF2;
}
.timeout{
  background-color: #FF7474;
}
.taskimg{
  width: 48rpx;
  height: 48rpx;
  margin-left: 138rpx;
  border-radius: 50%;
}
.tasker{
  color: #666666;
  font-size: 28rpx;
  margin-left: 18rpx;
  width: 100rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
/* 任务筛选区域 */
.selectlist{
  display: flex;
  height: 100rpx;
  align-items: center;
  font-size: 28rpx;
  color: #666666;
  background-color: white;
}
.myaction{
  margin-top: 30rpx;
}
.selectimg{
  width: 28rpx;
  height: 28rpx;
  margin-left: 40rpx;
  border-radius: 50%;
}
.selecttitle{
  margin-left: 34rpx;
}
.selectradio{
  margin-left: 400rpx;
}
.selectbtn{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 45rpx;
  margin-bottom: 30rpx;
}
.reset{
  background-color: white;
}

.btn{
  width: 315rpx;
  height: 72rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: 1rpx solid #409CF2;
  color: #409CF2;
  text-align: center;
  line-height: 72rpx;
}

.sure{
  background-color: #409CF2;
  color: white;
  margin-left: 40rpx;
}
/* 影音层 */
.model{
  position: fixed;
  z-index: 2;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.8);
}

/* 新建任务清单 */
.addTaskPlan{
  display: flex;
  align-items: center;
  width: 710rpx;
  height: 80rpx;
  margin: auto;
  margin-top: 20rpx;
  background-color: white;
  justify-content: center;
  align-items: center;
  color: #409CF2;
  font-size: 28rpx;
}
.plus{
  padding:0rpx;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #409CF2;
  border-radius:50%;
  font-size: 28rpx;
  margin-right: 19rpx;
}
/*----------------------------------------------------- 文件列表区域 ------------------------------------------------*/
.filelist{
  margin-top: 10rpx;
}

.file-select-info{
  display: flex;
  z-index: 4;
  position: fixed;
  top: 0rpx;
  width: 100%;
  background-color: white;
  align-items: center;
  height: 88rpx;
}

.cancel{
  height: 26rpx;
  margin-left: 25rpx;
  font-size: 28rpx;
  color: #666666;
}
.select-num{
  color: #333333;
  font-size: 34rpx;
  flex: 2;
  text-align: center;
}
.select-all{
  height: 26rpx;
  margin-right: 24rpx;
  font-size: 28rpx;
  color: #666666;
}

/* 底部文件操作弹框 */
.footer-alert{
  position: fixed;
  display: flex;
  height: 98rpx;
  bottom: 0rpx;
  width: 100%;
  transition: all 0.5s;
  align-items: center;
  background-color: rgba(64,156,242,1);
}

.operation{
  width: 25%;
  text-align: center;
}
.footerimg{
  width: 42rpx;
  height: 42rpx;
}
.footertext{
  height: 19rpx;
  line-height: 0rpx;
  margin-top: 12rpx;
  font-size: 20rpx;
  color: #F8F8F8;
}
/* 文件更多操作 */
.footer-more{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  z-index:5;
  background-color: rgba(237,239,245,1);
}
.more{
  margin-top: 15rpx;
  font-size: 28rpx;
  text-align: center;
}
.copyto,.rename{
  height: 68rpx;
  line-height: 68rpx;
  margin-top: 3rpx;
  background-color: white;
}
.cancelfun{
  height: 68rpx;
  line-height: 68rpx;
  margin-top: 10rpx;
  background-color: white;
}
.moreModel{
  position: fixed;
  z-index: 4;
  top: 0rpx;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
}