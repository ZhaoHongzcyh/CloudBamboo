<!--index.wxml-->
<view class="system">
  <view class="system_public">
    <view class="imgBamboo">
    <!-- 云竹图片 -->
      <image src='./img/banbom.png' class="logoimg"></image>
    </view>
    <view class="urlbtn">
    <!-- 登录与注册路由 -->
      <view class="routeBtn">
        <view class="logoinRoute">登录</view>
        <view class="line">
        </view>
      </view>
      <view class="routeBtn">
        <view class="registerRoute">注册</view>
        <view class="line">
        </view>
      </view>
    </view>
  </view>
  <view class="logoinForm">
    <form>
      <view class="phoneNumber commoninput">
        <input type="number" maxlength='11' class="user input"/>
        <view class="placeholder">
          请输入手机号
        </view>
      </view>
      <view class="password commoninput">
        <input type="password" maxlength='11' class="pwd input"/>
        <view class="placeholder">
          请输入密码
        </view>
      </view>
    </form>
  </view>
  <view class="registerForm">
    <form>
      <view class="phoneNumber commoninput">
        <input type="number" maxlength='11' class="user input"/>
        <view class="placeholder">
          请输入手机号
        </view>
        <view class="getVerificationCode">
          获取验证码
        </view>
      </view>
      <view class="password commoninput">
        <input type="number" maxlength='11' class="user input"/>
        <view class="placeholder">
          请输入验证码
        </view>
      </view>
      <view class="password commoninput">
        <input type="number" maxlength='20' minlength="6" class="pwd input"/>
        <view class="placeholder Verification">
          请输入6-20位字母或数字d的密码
        </view>
      </view>
      <view class="registerbtn btn">
        <view class="btnText">注册</view>
      </view>
    </form>
  </view>
</view>
