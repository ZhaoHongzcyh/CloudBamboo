<!-- 导入导航模板 -->
<import src="/pages/tabBar/tabBar.wxml"/>
<template is="tabBar" data="{{url}}"></template>
<view class="myself" wx:if="{{list.length > 0?true:false}}">
  <view class="head">
    <image src="{{headimg}}" class="headimg" bindtap="alert"></image>
    <view class="user">{{userinfo.name}}</view>
    <image class="bell" src="./img/bell.png" bindtap="alert"></image>
    <image class="set" src="./img/set.png" bindtap="alert"></image>
  </view>
  <!-- 待我处理 -->
  <view class="waiting">
    <view class="wait-handle-head">
      <view class="wait-text">待我处理</view>
      <view class="wait-num">{{list.length}}</view>
    </view>
    <view class="wait-content {{item.emergencyGrade == 2? 'error':''}} {{item.emergencyGrade == 1? 'warning':''}}" bindtap="alert" wx:for="{{list}}">
      <view class="radio-area" bindtap="alert">
        <radio class="radio" color="#409CF2" disabled  bindtap="alert"></radio>
      </view>
      <view class="wait-info">
        <view class="wait-title">{{item.title}}</view>
        <view class="wait-time {{item.isTimeOut? 'timeout': ''}}" wx:if="{{item.endDate != null}}">{{item.endDate + '截止'}}</view>
      </view>
      <image class="handle-img" src="./img/head.png"></image>
      <view class="handle-name">{{item.managerName}}</view>
    </view>
  </view>
</view>
<!-- 无数据情况 -->
<view class="no-task" wx:if="{{list.length == 0}}">
  <view class="no-content">
    <image src="./img/no-project.png" class="no-project-img"></image>
    <view class="no-project-text">没有待处理的任务</view>
  </view>
</view>
<!-- app下载弹框 -->
<popup id='popup' content="云竹协作更多功能，请下载App" footer="立即下载"></popup>