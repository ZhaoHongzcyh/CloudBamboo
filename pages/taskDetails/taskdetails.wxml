<!--任务详情页面-->
<view>
  <view class="task-head">
    <view>{{task.itemBean.title}}</view>
    <view class="edit taskbtn" bindtap="edittask">编辑任务</view>
    <view class="taskbtn" bindtap="copytask">复制任务</view>
    <view class="taskbtn">删除任务</view>
  </view>
  <!-- 任务名称或任务概述 -->
  <view class="taskstatus">
    <view bindtap="switchStatus" data-status="{{task.itemBean.status}}">
      <radio checked="{{task.itemBean.status==0? false:true}}" color="#409CF2"/>
    </view>
    <view>{{task.itemBean.title}}</view>
  </view>
  <!-- 任务基础信息 -->
  <view>
    <view class="info" bindtap="watchDescript">
      <view class="infotitle">任务描述</view>
      <view class="common_title">{{emergencyGrade[task.itemBean.emergencyGrade]}}</view>
    </view>
    <view class="info">
      <view class="infotitle">执行人</view>
      <view class="common_title">
        <image class="imphead" src="{{app.ip + 'tc/spaceService/showPersonIcon/' + task.itemBean.manager + '/100/100'}}"></image>
      </view>
    </view>
    <view class="info">
      <view class="infotitle">参与人</view>
      <view bindtap="getParticipants" class="common_title">
        <block wx:for="{{task.memberList}}">
          <image class="memberphoto" wx:if="{{item.relationType == 2}}" src="{{app.ip + 'tc/spaceService/showPersonIcon/' + item.personId + '/100/100'}}"></image>
        </block>
      </view>
    </view>
    <view class="info">
      <view class="infotitle">紧急程度</view>
      <view class="common_title">{{emergencyGrade[task.itemBean.emergencyGrade]}}</view>
    </view>
    <view class="info">
      <view class="infotitle">开始时间</view>
      <view class="time common_title">{{task.itemBean.startDate}}</view>
    </view>
    <view class="info">
      <view class="infotitle">结束时间</view>
      <view class="time common_title">
        {{task.itemBean.endDate == null? '--:--':task.itemBean.endDate}}
      </view>
    </view>
  </view>
  <!-- 附件列表 -->
  <view>
    <view>显示所有附件</view>
    <block wx:for="{{task.arcList}}">
      <file isdownload="{{true}}" item="{{item}}" bind:download="downloadFile"></file>
    </block>
  </view>
  <!-- 任务动态 -->
  <view>
    <view wx:if="{{!isShowAllAction}}" bindtap="showAllAction">显示所有任务动态</view>
    <view wx:for="{{ isShowAllAction? task.actionList:partAction}}" class="task-action">
      <view style="border: 1rpx solid red;">{{item.personName}}</view>
      <view>{{item.descript}}</view>
    </view>
  </view>
  <!-- 评论回复区域 -->
  <view>
    <textarea placeholder="回复任务，可以@成员" bindinput="reply" style="border:1rpx solid red">
      
    </textarea>
    <rich-text nodes="{{replyContent}}"></rich-text>
    <view>发布</view>
  </view>
  <!-- 弹框 -->
<popup id='popup' isAlert="{{true}}" content="{{alert.content}}" footer="确定"></popup>
</view>


