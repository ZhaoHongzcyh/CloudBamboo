.add-new-company{
  position:absolute;
  width: 100%;
  height: calc(100% - 100rpx);
  overflow: auto;
 background:rgba(245,245,245,1);
}
.new-company-title{
  height: 23rpx;
  color: #999999;
  font-size: 24rpx;
  line-height: 23rpx;
  margin: 26rpx 41rpx;
}
.new-company-name{
  position: relative;
  background-color: white;
}
.textPlaceholder{
  position: absolute;
  left: 0rpx;
  top: 24rpx;
  color: #666666;
  margin-left: 41rpx;
  right: 0rpx;
  font-size: 28rpx;
}
.input-company-name{
  margin-left: 41rpx;
  height: 120rpx;
  width: 100%;
  color: #666666;
  font-size: 28rpx;
}

/* 添加成员区域 */
.add-people{
  background-color: white;
  display:flex;
  flex-wrap: wrap;
}

.add-people-btn{
  height: 113rpx;
  width: 68rpx;
  margin-left: 57rpx;
  margin-top: 24rpx;
}

.addText{
  height: 23rpx;
  font-size: 24rpx;
  text-align: center;
  color: rgba(102,102,102,1);
}
.add-menmber-btn{
  padding: 0rpx;
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  color: white;
  text-align: center;
}
/* 添加按钮 */
.add-company-btn{
  width: 670rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  border-radius: 36rpx;
  margin: auto;
  margin-top: 530rpx;
  color: white;
  text-align: center;
  background-color: #409CF2;
}
