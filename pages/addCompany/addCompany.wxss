page{
   background:rgba(245,245,245,1);
}
.add-new-company{
  position:absolute;
  width: 100%;
  height:calc(100% - 100rpx);
  overflow: auto;
}
.new-company-title{
  height: 23rpx;
  color: #999999;
  font-size: 24rpx;
  line-height: 23rpx;
  margin: 26rpx 41rpx;
}
.new-company-name{
  position: relative;
  height: 120rpx;
  background-color: white;
}
.textPlaceholder{
  position: absolute;
  left: 0rpx;
  top: 24rpx;
  color: #666666;
  margin-left: 41rpx;
  right: 0rpx;
  font-size: 28rpx;
}
.input-company-name{
  position: absolute;
  left: 41rpx;
  top: 24rpx;
  height: 96rpx;
  width: 100%;
  color: #666666;
  font-size: 28rpx;
}

/* 添加成员区域 */
.add-people{
  background-color: white;
  display:flex;
  flex-wrap: wrap;
}

.add-people-btn{
  height: 113rpx;
  width: 68rpx;
  margin-left: 57rpx;
  margin-top: 24rpx;
}

.addText{
  height: 23rpx;
  font-size: 24rpx;
  text-align: center;
  color: rgba(102,102,102,1);
}
.add-menmber-btn{
  padding: 0rpx;
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  color: white;
  text-align: center;
}
/* 添加按钮 */
.add-company-btn{
  position: fixed;
  left: 50%;
  margin-left: -335rpx;
  bottom: 20rpx;
  width: 670rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  border-radius: 36rpx;
  /* margin-top: 380rpx; */
  color: white;
  text-align: center;
  background-color: #409CF2;
}

.adding{
  background-color: #7777777;
}

/* 公司所在地址 */
.companyaddress{
  display: flex;
  font-size: 28rpx;
  height: 80rpx;
  align-items: center;
  background-color: white;
}
.addresstitle{
  flex: 1;
  margin-left: 41rpx;
  color: #999999;
}

.adminAddress{
  flex: 2;
}
.rowaddress{
  margin-right: 20rpx;
  color: #999999;
}

/* 地区三级联动选择器 */
.selectAddress{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0rpx;
  background-color: rgba(0,0,0,0.5);
}
.addressContent{
  background-color:white;
  width: 100%;
  font-size: 28rpx;
  position: absolute;
  height: 400rpx;
  bottom: 0rpx;
}

.selectContent{
  display: flex;
}
.btnhead{
  display: flex;
  justify-content: center;
}

.btn{
  padding: 20rpx;
  width: 50%;
}

.cancel{
  text-align: left;
  color: #999999;
}

.sure{
  text-align: right;
  color: rgb(44,184,116);
}
.selectContent{
    width: 100%;
    display: flex;
    font-size: 28rpx;
    height: 400rpx;
    justify-content: center;
}

.province{
  height: 300rpx;
  width: 45%;
  overflow: auto;
  text-align: center;
}
.city{
  width: 45%;
  height: 300rpx;
  overflow: auto;
  text-align:center;
}
.spacing{
  width: 10%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}